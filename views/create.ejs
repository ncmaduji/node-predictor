
<%- include('partials/header') %>
<div class='container'>

  <div class="row d-flex justify-content-center">
    
    <div class="col-6">
      
      <div class="jumbotron">
        <h1 class="display-4">Create an Enrollment</h1>
        
      </div>
    
    <form method="post" action="/enrollments">
      <div class="form-group">
        <label for="firstname">FirstName</label>
        <input  id="firstname" type="text" name="firstName" class="form-control" required >
      </div>
      <div class="form-group">
          <label for="lastname">LastName</label>
          <input id="lastname" type="text" name="lastName" class="form-control" required >
      </div>
      <div class="form-group">
          <label for="highschoolgpa">highSchoolGPA</label>
          <input id="highschoolgpa" type="text" name="highSchoolGPA" class="form-control" required>
      </div>
  
      <div class="form-group">
        <div class="custom-control custom-radio">
          <input type="radio" id="male" value="Male" name="gender" class="custom-control-input">
          <label class="custom-control-label" for="male">Male</label>
        </div>
        <div class="custom-control custom-radio">
          <input type="radio" id="female" value="Female" name="gender" class="custom-control-input">
          <label class="custom-control-label" for="female">Female</label>
        </div>
      </div>
  
      <div class="form-group">
        <div class="custom-control custom-radio">
          <input type="radio" id="Resident" value="Resident" name="logisticsStatus" class="custom-control-input">
          <label class="custom-control-label" for="Resident">Resident</label>
        </div>
        <div class="custom-control custom-radio">
          <input type="radio" id="Commuter" value="Commuter" name="logisticsStatus" class="custom-control-input">
          <label class="custom-control-label" for="Commuter">Commuter</label>
        </div>
      </div>
  
      <div class="form-group form-check">
        <input type="checkbox" name="financialAid" class="form-check-input" id="financialAid">
        <label class="form-check-label" for="financialAid">financialAid</label>
      </div>
      <div class="form-group form-check">
          <input type="checkbox" name="club" class="form-check-input" id="club">
          <label class="form-check-label" for="club">club</label>
      </div>
      <div class="form-group form-check">
          <input type="checkbox" name="sportTeam" class="form-check-input" id="sportTeam">
          <label class="form-check-label" for="club">sportTeam</label>
      </div>
      <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </form>

    </div>
    
  </div>
  
  
</div>
<%- include('partials/footer') %>


