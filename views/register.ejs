
<%- include('partials/header') %>
<div class='container'>

    <div class="row d-flex justify-content-center">
      
      <div class="col-6">
        <h3>Register</h3>
        <form method="POST" action="/register">
            <div class="form-group">
                <label for="email">Email:</label>
                <input required type="text" class="form-control" id="email" placeholder="email" name="username">
            </div>
            <div class="form-group">
                <label for="firstName">FirstName</label>
                <input required type="text" class="form-control" id="firstName" placeholder="firstName" name="firstName">
            </div>
                
            <div class="form-group">
                <label for="lastName">LastName</label>
                <input required type="text" class="form-control" id="lastName" placeholder="lastName" name="lastName">
            </div>
                
                
            <div class="form-group">
                <label for="password">Password</label>
                <input required type="password" id="password" class="form-control" placeholder="password" name="password">
            </div>
                
            <button type="submit" class="btn btn-primary btn-block">Register</button>
            
            
        </form>
      </div>
    </div>
</div>
<%- include('partials/footer') %>